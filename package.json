{
  "name": "template",
  "version": "0.0.1",
  "scripts": {
    "start": "yarn run server",
    "development": "yarn run clean && nodemon . & NODE_ENV=development webpack --watch",
    "production": "yarn run clean && NODE_ENV=production webpack -p",
    "upgrade": "npm version patch --sign-git-tag=true",
    "build": "webpack",
    "server": "forever .",
    "test": "yarn clean",
    "mqtt": "bash ../mqtt/bin/run.sh",
    "mongo": "yarn run mongodb",
    "mongodb": "sudo mongod --dbpath server/mongodb --port 3001",
    "clean": "rimraf ./server/public/",
    "webpack": "yarn run clean && webpack-dev-server --progress --inline --hot --port 3000",
    "preversion": "yarn test",
    "version": "yarn run build && git add --all",
    "postversion": "git push && git push --tags"
  },
